<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vBox" prefHeight="400.0" prefWidth="640.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.gui.NotepadViewController">
  <children>
    <MenuBar>
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#handleNewTabs" text="Novo">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="FILE" />
                     </graphic>
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#handleOpenAction" text="Abrir... ">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="FOLDER_OPEN" />
                     </graphic>
                  </MenuItem>
            <Menu fx:id="openRecent" mnemonicParsing="false" text="Abrir Recente">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="FOLDER_OPEN" />
                     </graphic>
                  </Menu>
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#handleCloseTabs" text="Fechar">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="W" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="CLOSE" />
                     </graphic>
                  </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#handleSaveAction" text="Salvar">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="SAVE" />
                     </graphic>
                  </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#handleSaveAsAction" text="Salvar Como...">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="SAVE" />
                     </graphic>
                  </MenuItem>
                  <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#closeApplication" text="Sair" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="UNDO" />
                     </graphic>
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="Z" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            <MenuItem mnemonicParsing="false" text="Redo">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="REPEAT" />
                     </graphic>
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="Y" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#handleCut" text="Cut">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="CUT" />
                     </graphic>
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="X" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#handleCopy" text="Copy">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="COPY" />
                     </graphic>
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="C" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#handlePaste" text="Paste">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" glyphName="PASTE" />
                     </graphic>
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="V" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" onAction="#handleSelectAll" text="Select All">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#handleUnselectAll" text="Unselect All" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" stylesheets="@Style.css" VBox.vgrow="ALWAYS">
         <children>
            <TabPane fx:id="tabPane" prefHeight="375.0" prefWidth="640.0" tabClosingPolicy="ALL_TABS" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
         </children></AnchorPane>
  </children>
</VBox>
